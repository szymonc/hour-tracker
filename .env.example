# Environment Configuration
# Copy to .env and set your values: cp .env.example .env

# Application
NODE_ENV=development
API_PORT=3000
WEB_PORT=4200

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=hlogger
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=hlogger

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Frontend
FRONTEND_URL=http://localhost:4200
API_URL=http://localhost:3000/api/v1

# Rate limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# Backend URL (used for constructing one-time login links in Telegram messages)
BACKEND_URL=http://localhost:3000

# Telegram Bot (create via @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
